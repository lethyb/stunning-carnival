{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "incremental": true,
        "sourceMap": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "images.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}